        <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6 picDetail">
            <img class="picDetail2" src=<%= service.photo %> width="100%">
        </div>
        <div class="col-12 col-sm-6 colmd-6 col-lg-6 col-xl-6 fondo">
            <h2 class="textoProd"> <%=service.name%> </h2>
