            <br>
            <h4 class="textoProd picDetail">Precio: $<%=service.price%></h4>
            <form class="col-12 textoProd" action='/products/addToCart/<%= service.id %>' method="POST">
                <div class="row">
                    <div class="col-4">
                            <label for="quantity">Cantidad:</label>
                            <input type="number" min="1" id="" name="quantity" class="form-control" value="1" >
                    </div>
                    <button type="submit" class="col-8 btn btn-primary">Agregar</button>
                </div>
                </form>
            </div>
        </div>
